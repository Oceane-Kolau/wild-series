{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
<div class="container m-4">
    <div class="hr-color"><hr></div>
    <h1>Season  {{ season.number }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row p-2">
        <a href="{{ path('season_edit', {'id': season.id}) }}"><button class="btn btn-color mr-4"><i class="far fa-edit"></i> edit</button></a>
        {{ include('season/_delete_form.html.twig') }}
    </div>
    <div>
        <a href="{{ path('season_index') }}"><button class="btn m-4 back">Back to list</button></a>
    </div>
</div>
{% endblock %}
