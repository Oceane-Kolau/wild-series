<div class="container m-5 p-5">
    {{ form_start(form) }}
    <div class="form-group row">
        <label for="program" class="col-sm-2 col-form-label">{{ form_label(form.program) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.program) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="number" class="col-sm-2 col-form-label">{{ form_label(form.number) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.number) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="year" class="col-sm-2 col-form-label">{{ form_label(form.year) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.year) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label">{{ form_label(form.description) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.description) }}
        </div>
    </div>
    <button class="btn btn-color">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>