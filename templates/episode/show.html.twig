{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
<div class="container m-4">
    <div class="hr-color"><hr></div>
    <h1>Episode {{ episode.number }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Season</th>
                <td>{{ episode.season.number }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row p-2">
        <a href="{{ path('episode_edit', {'id': episode.id}) }}"><button class="btn btn-color mr-4"><i class="far fa-edit"></i> edit</button></a>
        {{ include('episode/_delete_form.html.twig') }}
    </div>
    <div>
        <a href="{{ path('episode_index') }}"><button class="btn m-4 back">Back to list</button></a>
    </div>
</div>
{% endblock %}
