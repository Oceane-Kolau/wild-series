{% include 'base.html.twig' %}

<body>
   <div class="container m-5">
      <h1>Discover all our categories</h1>
      <div class="row">
         {% for category in categories %}
         <ul class="list-group m-2 p-2 categories-color">
            <a href="{{ path("category_show", { categoryName: category.name }) }}">
            <li class="list-group-item list-group-item-color p-4">{{category.name}}</li></a>
         </ul>
         {% endfor %}
      </div>
   </div>
</body> 