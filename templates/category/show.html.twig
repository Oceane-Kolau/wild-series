{% include 'base.html.twig' %}

<body>
   <div class="container m-2">
      <h1> <i class="fas fa-film film-color"></i> Programs available in the {{ category.name }} category</h1>
      <div class="row justify-content-around align-items-center">
         {% for program in programs %}
         <div class="col-xl-6 col-lg-4 col-md-4 col-sm-1 col-xs-1 pt-3">
            <div class="card-group">
               <div class="card-body">
                  <h5 class="card-title">{{program.title}}</h5>
                  <p>{{program.summary}}</p>
                  <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
               </div>
            </div>
            {% else %}
            Aucune série trouvée.
         </div>
         {% endfor %}
      </div>
      <a href="{{ path('category_index') }}">
         Retour à la liste des categories
      </a>
   </div>
</body>
</html>