{% extends "base.html.twig" %}

{% block body %}
<div class="container m-4">
    {{ form_start(form) }}
    <h1>Create a new Category</h1><div class="hr-color"><hr></div>
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">{{ form_label(form.name) }}</label>
        <div class="col-sm-10">
        {{ form_widget(form.name) }}
        </div>
    </div>
    <input class="btn btn-color" type='submit' value='Add category'>
    {{ form_end(form) }}
</div>
{% endblock %}