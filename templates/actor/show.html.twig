{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
<h1 class="text-center m-5">{{ actor.name }}</h1>
<hr class="hr-color">
<div class="container mx-auto mt-5">
    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-5 col-sm-12 col-xs-1 text-center pt-3">
            {% for program in actor.programs %}
            <div class="card-group">
                <a href="{{ path("program_show", { slug: program.slug }) }}">
                    <img src="{{program.poster}}" class="card-img-top img-fluid" alt="{{program.title}}"></a>
                <div class="card-body">
                    <h5 class="card-title">{{program.title}}</h5>
                </div>
            </div>
            {% else %}
            <h3>Aucune série pour cet acteur</h3>
        </div>
    </div>
    {% endfor %}
    <div class="mb-5">
        <a href="{{ path('program_index') }}"><button class="btn btn-color">Retour à la liste de tous les programmes
        </button></a>
    </div>
</div>
{% endblock %}