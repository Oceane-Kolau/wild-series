{% include 'base.html.twig' %}

<body>
<div class="container mt-5 mx-auto">
   <h2 class="text-center">Saison {{ season.number }} - {{ program.title}}<hr class="hr-color"></h2>
   <div class="media">
      <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
      <div class="media-body">
         <p>{{ season.description }}</p>
         {% for episode in episodes %}
         <p><span class="color-episod">Episode {{episode.number}}</span> <br> {{episode.title}} <br></p>
         <p>{{episode.synopsis}}</p>
         {% endfor %}
      </div>
   </div>
   <div class="mt-5">
      <a href="{{ path("program_show", { id: program.id }) }}"><button class="btn btn-color">Retour Ã  la liste des saisons
         </button></a>
   </div>
</div>
</body>

</html>