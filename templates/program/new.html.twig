{% extends "base.html.twig" %}

{% block body %}
<div class="container m-5 p-5">
    <h1>Create a new Program</h1><div class="hr-color"><hr></div>
    {{ form_start(form) }}
    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">{{ form_label(form.title) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.title) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="category" class="col-sm-2 col-form-label">{{ form_label(form.category) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.category) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="summary" class="col-sm-2 col-form-label">{{ form_label(form.summary) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.summary) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="poster" class="col-sm-2 col-form-label">{{ form_label(form.poster) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.poster) }}
        </div>
    </div>
    <input class="btn btn-color" type='submit' value='Add program'>
    {{ form_end(form) }}
</div>
{% endblock %}